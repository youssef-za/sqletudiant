<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Style -->
    <style name="CustomTextStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#FF6F00</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Required base colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Mandatory MaterialComponents items -->
        <item name="materialButtonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>

        <!-- Theme enforcement -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents</item>
        <item name="android:windowIsTranslucent">true</item>

        <!-- Text appearance -->
        <item name="android:textAllCaps">false</item>
        <item name="textAppearanceButton">@style/TextAppearance.MaterialComponents.Button</item>
    </style>

    <!-- Button Styles -->
    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- Color Variants -->
    <style name="MyOutlinedButtonRed" parent="MyOutlinedButton">
        <item name="strokeColor">@color/red_500</item>
        <item name="android:textColor">@color/red_500</item>
        <item name="rippleColor">@color/red_200</item>
    </style>
    <style name="ThemeOverlay.MaterialComponents" parent="">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>

    <style name="MyOutlinedButtonBlue" parent="MyOutlinedButton">
        <item name="strokeColor">@color/blue_500</item>
        <item name="android:textColor">@color/blue_500</item>
        <item name="rippleColor">@color/blue_200</item>
    </style>

    <style name="MyOutlinedButtonGreen" parent="MyOutlinedButton">
        <item name="strokeColor">@color/green_500</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="rippleColor">@color/green_200</item>
    </style>

</resources>